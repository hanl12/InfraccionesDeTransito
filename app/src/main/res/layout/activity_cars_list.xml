<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarsListActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack3"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8sp"
            app:icon="@drawable/arrow_left_bold__2_"
            app:iconGravity="textTop"
            app:iconPadding="2dp" />

        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="@string/tvFilter"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spnPlateFilter"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" />

        <Spinner
            android:id="@+id/spBrandFilter"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="68dp"
            android:layout_height="38dp"
            android:padding="2dp"
            android:text="@string/btnFilter"
            android:textAlignment="center" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>